{
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "single"],
    "no-undef": "error"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "ymaps": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}