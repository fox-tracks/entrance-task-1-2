{
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "single"]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "ymaps": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}